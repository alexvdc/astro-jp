---
import Hamburger from "./Hamburger.astro";
import NavLink from "./NavLink.astro";
---

<div class="navigation">
  <div class="navigation__content">
    <div class="navigation__logo">
      <a href="/">
        <img src="/images/logo.svg" alt="logo">
      </a>
    </div>
    <nav>
      <ul class="nav-links">
        <li><NavLink href="/jurassic-park-I" name="Jurassic Park I" theme="white" /></li>
        <li><NavLink href="/jurassic-park-II" name="Jurassic Park II" theme="white" /></li>
        <li><NavLink href="/jurassic-park-III" name="Jurassic Park III" theme="white" /></li>
      </ul>
      <Hamburger />
    </nav>
  </div>
</div>

<style lang="scss">
  .navigation {
    position: fixed;
    background-color: rgba(8, 40, 19, 0.45);
    padding: 0.25rem 1rem;
    top: 0;
    left: 0;
    width: 100%;
    z-index: 5;

    &__logo {
      display: flex;
      align-items: center;

      img {
        width: 56px;
        height: 56px;
        
      }
    }

    &__content {
      margin: 0 auto;
      display: flex;
      justify-content: space-between;
      align-items: center;
      max-width: 1280px;
    }

    nav {
      display: flex;
      align-items: center;
    }

    .nav-links {
      display: flex;
      justify-content: center;
      align-items: center;

      li {
        margin: 0 1rem;
      }

      @media screen and (max-width: 636px) {
        visibility: hidden;
        margin-left: -1000px;
        // transition: margin-left 0.25s ease-in-out;
      }
    }
    
    .expanded {
      visibility: visible;
      backdrop-filter: blur(10px);
      display: flex;
      justify-content: center;
      flex-direction: column;
      position: fixed;
      width: 100%;
      height: 40vh;
      top: 0;
      left: 0;
      background-color: rgba(0, 0, 0, 0.8);
      z-index: 5;
      margin-left: 0;
      li {
        margin: 1rem 0;

        a {
          font-weight: bold;
          font-size: var(--step-1);
        }
      }
    }
    &::after {
      content: "";
      position: absolute;
      width: 90%;
      display: inline-block;
      height: 1px;
      background: linear-gradient(to right, transparent, var(--white), transparent);
      bottom: 0;
      left: 50%;
      transform: translateX(-50%);
    }

  }
</style>
