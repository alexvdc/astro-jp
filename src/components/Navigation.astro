---
import Hamburger from "./Hamburger.astro";
---

<div class="navigation">
  <div class="navigation__content">
    <div class="navigation__logo">
      <a href="/"><img src="/images/logo.svg" alt="logo" /></a>
    </div>
    <nav>
      <ul class="nav-links">
        <li><a href="/jurassic-park-I">Jurassic Park I</a></li>
        <li><a href="/jurassic-park-II">Jurassic Park II</a></li>
        <li><a href="/jurassic-park-III">Jurassic Park III</a></li>
      </ul>
      <Hamburger />
    </nav>
  </div>
</div>

<style lang="scss">
  .navigation {
    position: fixed;
    background-color: rgba(8, 40, 19, 0.416);
    padding: 0.25rem 1rem;
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    z-index: 5;
    &__logo {
      display: flex;
      justify-content: center;
      align-items: center;
      width: 56px;
      height: 56px;

      img {
        width: 100%;
        height: 100%;
      }
    }
    &__content {
      margin: 0 auto;
      display: flex;
      justify-content: space-between;
      align-items: center;
      max-width: 1280px;
    }

    nav {
      display: flex;
      align-items: center;
    }

    .nav-links {
      display: flex;
      justify-content: center;
      align-items: center;

      li {
        margin: 0 1rem;
      }

      @media screen and (max-width: 636px) {
        visibility: hidden;
        margin-left: -1000px;
        transition: margin-left 0.25s ease-in-out;
      }
    }
    
    .expanded {
      visibility: visible;
      backdrop-filter: blur(10px);
      display: flex;
      justify-content: center;
      flex-direction: column;
      position: fixed;
      width: 100%;
      height: 40vh;
      top: 0;
      left: 0;
      background-color: rgba(0, 0, 0, 0.8);
      z-index: 5;
      margin-left: 0;
      li {
        margin: 1rem 0;

        a {
          font-weight: bold;
          font-size: var(--step-1);
        }
      }
    }
    &::after {
      content: "";
      position: absolute;
      width: 90%;
      display: inline-block;
      height: 1px;
      background: linear-gradient(to right, transparent, var(--white), transparent);
      bottom: 0;
      left: 50%;
      transform: translateX(-50%);
    }

    a {
      color: #f1f1f1;
      display: inline-block;
      transition: transform 0.15s ease-out;
      &:hover {
        color: var(--red);
        transform: scale(1.1);
      }
    }
  }
</style>
