---
const { srcVideo, videoID } = Astro.props;
---

<div class="container">
  <h3 class="container__title">
    <a class="container__link" target="_blank" href={srcVideo}></a>
    Bande &nbsp; annonce
  </h3>
  <lite-youtube class="container__video" videoid={videoID}>
    <a href={srcVideo}>Watch on YouTube</a>
  </lite-youtube>
</div>

<style lang="scss">
  .container {
    position: relative;
    right: 5rem;
    margin-left: auto;
    display: flex;

    &__title {
      position: relative;
      display: flex;
      align-items: center;
      justify-content: center;
      color: var(--white);
      text-transform: uppercase;
      word-break: break-all;
      width: 1rem;
      padding: 0.5rem 1rem;
      margin-inline: auto;
      background-color: rgba(0, 0, 0, 0.308);
      border: 2px solid var(--white);
    }
    &__video {
      border-top: 2px solid var(--white);
      border-right: 2px solid var(--white);
      border-bottom: 2px solid var(--white);
      width: 650px;
      aspect-ratio: 16 / 9;
      display: flex;
      justify-content: center;
      align-items: center;
      flex-direction: column;
      gap: 1em;
      padding: 1em;
      background-color: #000;
      color: var(--white);
      text-decoration: none;
    }

    @media screen and (max-width: 800px) {
      right: 0;
      margin-inline: auto;

      &__title {
        border-color: var(--yellow);
        word-break: normal;
        width: 100%;
        margin: 0 auto;
        border-radius: 0.25rem;
        &:hover {
          background-color: #e5654f99;
        }
      }
      &__video {
        display: none;
      }
      &__link {
        position: absolute;
        width: 100%;
        height: 100%;
      }
    }
  }
</style>

<script
  type="module"
  src="https://cdn.jsdelivr.net/npm/@justinribeiro/lite-youtube@1.5.0/lite-youtube.js"
></script>
