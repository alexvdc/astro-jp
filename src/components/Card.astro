---
const { image, name, description } = Astro.props;
---

{
  <div class="card">
    <img src={image} alt={name} />
    <div>
      <h2>{name}</h2>
      <p set:html={description} />
    </div>
  </div>
}

<style>
  .card {
    position: relative;
    width: 225px;
    aspect-ratio: 1/1.3;
    display: flex;
    align-items: center;
    flex-direction: column;
    border-radius: 1rem;
    overflow: hidden;
    box-shadow: 0px 2px 10px 0px #222222a8;
  }
  img {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
  }
  div {
    display: flex;
    justify-content: center;
    align-items: center;
    flex-direction: column;
    z-index: 1;
    color: white;
    text-align: center;
  }
</style>
