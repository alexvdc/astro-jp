---
const { image, name, description } = Astro.props;
---


{
  (
    <div class="card">
      <img class="card__image" src={image} alt={name} />
      <div class="card__infos">
        <h3>{name}</h3>
        <div set:html={description} />
      </div>
    </div>
  )
}

<style lang="scss">
  .card {
    position: relative;
    width: 250px;
    aspect-ratio: 1/1.3;
    display: flex;
    align-items: center;
    flex-direction: column;
    border-radius: 1rem;
    overflow: hidden;
    box-shadow: 0px 2px 10px 0px #222222a8;

    &__image {
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      object-fit: cover;
      filter: grayscale(0);
    }

    &__infos {
      display: flex;
      justify-content: space-between;
      flex-direction: column;
      z-index: 1;
      height: 100%;
      padding: 1.5rem 1rem;
      color: white;
      position: absolute;
      top: 84%;
      transition: top 0.3s ease-in-out;
      color: #f3de52;

      h3 {
        text-align: center;
      }

      div {
        text-align: left;
      }
    }

    &:hover &__image {
      filter: grayscale(1);
    }
    &:hover div {
      top: 0;
    }
  }
</style>