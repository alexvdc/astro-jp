<style>
  .hamburger {
    position: fixed;
    top: 0.8rem;
    right: 1rem;
    display: none;
    cursor: pointer;
    z-index: 99;
    border: 1px solid #cccccc80;
    width: 40px;
    height: 40px;
    padding: 0.5rem;
    border-radius: 0.25rem;
    background-color: rgba(0, 0, 0, 0.2);
  }

  .hamburger .line {
    display: block;
    width: 100%;
    height: 5px;
    background-color: var(--white);
  }

  @media (max-width: 636px) {
    .hamburger {
      display: flex;
      flex-direction: column;
      justify-content: space-between;
    }
  }
</style>
