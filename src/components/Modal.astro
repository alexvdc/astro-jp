---
const { image, name, description } = Astro.props;
---

{
  (
    <div class="modal">
      <span class="modal__bg" />
      <div class="modal-content">
        <span class="close">
          <svg
            xmlns="http://www.w3.org/2000/svg"
            class="icon icon-tabler icon-tabler-x"
            width="24"
            height="24"
            viewBox="0 0 24 24"
            stroke-width="2"
            stroke="currentColor"
            fill="none"
            stroke-linecap="round"
            stroke-linejoin="round"
          >
            <path stroke="none" d="M0 0h24v24H0z" fill="none" />
            <path d="M18 6l-12 12" />
            <path d="M6 6l12 12" />
          </svg>
        </span>

        <img src={image} alt={name} class="modal-content__image" />

        <h3 class="modal-content__name">{name}</h3>
        <div class="modal-content__description" set:html={description} />
      </div>
    </div>
  )
}

<style lang="scss">
  .modal {
    position: fixed;
    display: none;
  }
  .modal.open {
    display: flex;
    justify-content: center;
    align-items: center;
    z-index: 10;
    max-width: 800px;
    width: 80%;

    .modal__bg {
      position: fixed;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      background-color: rgba(0, 0, 0, 0.5);
      backdrop-filter: blur(5px);
      z-index: 1;
    }

    .modal-content {
      position: fixed;
      top: 50%;
      left: 50%;
      translate: -50% -50%;
      display: flex;
      align-items: center;
      justify-content: center;
      background: url("/images/pattern.svg");
      width: 80%;
      aspect-ratio: 1/0.5;
      height: fit-content;
      max-width: 800px;
      z-index: 48;
      border: 8px solid var(--yellow);
      border-radius: 0.5rem;

      &__image {
        max-width: 300px;
        width: 100%;
        height: 100%;
        object-fit: cover;
      }
      &__name {
        position: absolute;
        top: -3.5rem;
        left: 0;
        width: 100%;
        text-align: center;
        text-transform: uppercase;
        font-size: var(--step-0);
        color: var(--yellow);
      }
      &__description {
        padding: 1em;
        font-weight: 500;
      }

      @media screen and (max-width: 636px) {
        flex-direction: column;
        justify-content: space-between;
        width: 80%;
        &__image {
          position: relative;
          top: -0.5rem;
          width: 100%;
          object-fit: cover;
          border: 8px solid var(--yellow);
          border-radius: 50%;
          width: 150px;
          height: 150px;
        }
      }
    }
    .close {
      position: absolute;
      top: 0;
      right: 0;
      display: flex;
      align-items: center;
      justify-content: center;
      padding: 0.25rem;
      border-left: 8px solid var(--yellow);
      border-bottom: 8px solid var(--yellow);
      border-bottom-left-radius: 0.5rem;
      cursor: pointer;
      transition: background-color 0.15s ease-out;

      &:hover {
        background-color: var(--yellow);
      }
    }
  }
</style>
