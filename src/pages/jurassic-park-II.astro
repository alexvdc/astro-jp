---
// Import components
import MainLayout from "../layouts/MainLayout.astro";
import Header from "../components/Header.astro";
import Summary from "../components/Summary.astro";
import Container from "../components/Container.astro";
// For this page
import bgImg from "/images/bg/jp2.webp";
import * as summaryStory from "../content/summary/jp2/short.md";
import * as summaryStoryExtend from "../content/summary/jp2/extend.md";
const allCharacters = await Astro.glob("../content/characters/jp2/*.md");
const allDinos = await Astro.glob("../content/dinos/jp2/*.md");
---

<MainLayout pageTitle={"Jurassic Park II"}>
  <Header 
    title={"Jurassic Park : Le Monde Perdu"} 
    date={"1997"} 
    image={bgImg} 
    />
  
  <Summary
    summaryStory={summaryStory}
    summaryStoryExtend={summaryStoryExtend}
  />

  <Container
    title="Gallerie des personnages"
    items={allCharacters}
    theme="light"
  />
  <Container 
    title="Gallerie des dinosaures" 
    items={allDinos} 
    theme="dark" 
  />
</MainLayout>